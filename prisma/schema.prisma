generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    email        String   @unique
    registeredAt DateTime @default(now())
    name         String
    password     String
    mobile       Int
    isActive     Boolean @default(false)
    otp         Int  @default(0)


    @@map("users")
}
